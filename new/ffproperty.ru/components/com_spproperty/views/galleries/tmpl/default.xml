            <field name="agentid" type="spagent" default="" label="COM_SPPROPERTY_FIELD_SELECT_AGENT" description="COM_SPPROPERTY_FIELD_SELECT_AGENT_DESC"/>
            <field name="order_by" type="list" default="" label="COM_SPPROPERTY_FIELD_ORDER" description="COM_SPPROPERTY_FIELD_ORDER_BY_DESC">
