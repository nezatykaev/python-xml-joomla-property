                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
            </field>

            <field name="gallery_style" type="list" label="COM_SPPROPERTY_GALLERY_STYLE" description="COM_SPPROPERTY_GALLERY_STYLE_DESC" default="masonry">
                <option value="masonry">COM_SPPROPERTY_GALLERY_STYLE_MASONARY</option>
                <option value="rectangle">COM_SPPROPERTY_GALLERY_STYLE_RECT</option>
            </field>

        </fieldset>
    </fields>
