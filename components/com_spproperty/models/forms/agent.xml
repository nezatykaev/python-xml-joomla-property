<?xml version="1.0" encoding="utf-8" ?>
<form>
    <fieldset name="basic">
        <field name="id" type="hidden" />
        <field name="title" type="text" label="COM_SPPROPERTY_FIELD_NAME" class="inputbox" required="true" />
        <field name="alias" type="hidden" id="alias" label="COM_SPPROPERTY_FIELD_ALIAS" description="COM_SPPROPERTY_FIELD_ALIAS_DESC" hint="JFIELD_ALIAS_PLACEHOLDER" size="40" />
        <field name="designation" type="text" label="COM_SPPROPERTY_FIELD_AGENT_DESINATION" description="COM_SPPROPERTY_FIELD_AGENT_DESINATION" />
        <field name="phone" type="text" label="COM_SPPROPERTY_FIELD_AGENT_PHONE" description="COM_SPPROPERTY_FIELD_AGENT_PHONE" />
        <field name="mobile" type="text" label="COM_SPPROPERTY_FIELD_AGENT_MOBILE" description="COM_SPPROPERTY_FIELD_AGENT_MOBILE" />
        <field name="skype" type="text" label="COM_SPPROPERTY_FIELD_AGENT_SKYPE" description="COM_SPPROPERTY_FIELD_AGENT_SKYPE" />
        <field name="email" type="email" label="COM_SPPROPERTY_FIELD_AGENT_EMAIL" description="COM_SPPROPERTY_FIELD_AGENT_EMAIL" />
        <!-- <field name="image" type="media" label="COM_SPPROPERTY_FIELD_IMAGE" description="COM_SPPROPERTY_FIELD_IMAGE" /> -->
        <field name="description" type="editor" label="COM_SPPROPERTY_FIELD_DESC" description="COM_SPPROPERTY_FIELD_DESC" cols="5" rows="5" filter="JComponentHelper::filterText" buttons="true" />
    </fieldset>

    <fieldset name="social">
        <field name="facebook" type="text" label="COM_SPPROPERTY_FIELD_SOCIAL_FACEBOOK" description="COM_SPPROPERTY_FIELD_SOCIAL_FACEBOOK" />
        <field name="twitter" type="text" label="COM_SPPROPERTY_FIELD_SOCIAL_TWITTER" description="COM_SPPROPERTY_FIELD_SOCIAL_TWITTER" />
        <field name="linkedin" type="text" label="COM_SPPROPERTY_FIELD_SOCIAL_LINKEDIN" description="COM_SPPROPERTY_FIELD_SOCIAL_LINKEDIN" />
        <field name="gplus" type="text" label="COM_SPPROPERTY_FIELD_SOCIAL_GPLUS" description="COM_SPPROPERTY_FIELD_SOCIAL_GPLUS" />
    </fieldset>

</form>